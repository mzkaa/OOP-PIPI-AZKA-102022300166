<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="LoginController">
    <children>
        <Label text="Login" layoutX="140.0" layoutY="30.0" style="-fx-font-size: 18px;"/>
        <Label text="Username:" layoutX="40.0" layoutY="80.0"/>
        <TextField fx:id="usernameField" layoutX="120.0" layoutY="80.0"/>
        
        <Label text="Password:" layoutX="40.0" layoutY="130.0"/>
        <PasswordField fx:id="passwordField" layoutX="120.0" layoutY="130.0"/>
        
        <Button text="Login" layoutX="140.0" layoutY="180.0" 
                onAction="#login"/>
    </children>
</AnchorPane>
